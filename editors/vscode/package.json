{
  "name": "ferrotex",
  "displayName": "FerroTeX",
  "description": "FerroTeX Language Server Client",
  "version": "0.14.0",
  "publisher": "ferrotex",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:latex",
    "onLanguage:tex"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "FerroTeX",
      "properties": {
        "ferrotex.serverPath": {
          "type": "string",
          "default": "ferrotexd",
          "description": "Path to the ferrotexd executable"
        }
      }
    },
    "commands": [
      {
        "command": "ferrotex.build",
        "title": "FerroTeX: Build Document"
      },
      {
        "command": "ferrotex.syncToPdf",
        "title": "FerroTeX: Sync to PDF"
      }
    ],
    "keybindings": [
      {
        "command": "ferrotex.build",
        "key": "ctrl+alt+b",
        "mac": "cmd+alt+b",
        "when": "editorTextFocus && resourceLangId == latex"
      }
    ],
    "customEditors": [
      {
        "viewType": "ferrotex.pdfPreview",
        "displayName": "FerroTeX PDF Preview",
        "selector": [
          {
            "filenamePattern": "*.pdf"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package --out ferrotex.vsix",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.22.0",
    "glob": "^10.0.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "pdfjs-dist": "^5.4.449",
    "vscode-languageclient": "^8.1.0"
  }
}
